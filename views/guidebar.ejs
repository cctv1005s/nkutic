<%-
    Loader('/css/guidebar.css')
    .css('/css/guidebar.css')
    .dev(filepath);
%>

<div class="guideBar ">
<div class="list-group basegroup">
               <a class="list-group-item" href="/"><p><span class="glyphicon glyphicon-home" aria-hidden="true"></span>   <span class="guidebarintro">主页</span></p></a>
                <a class="list-group-item" href="/activity"><p><span class="glyphicon glyphicon-th" aria-hidden="true"></span>     <span class="guidebarintro">活动</span> </p></a>
                <a class="list-group-item" href="/course"><p><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>     <span class="guidebarintro">课程</span></p></a>
                <% if(user){%>
                <a class="list-group-item" href="/myblog"><p><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>      <span class="guidebarintro">写文章</span> </p></a>
                <% if(user[0].userId == '0'){%>
                    <a class="list-group-item" href="/admin"><p><span class="glyphicon glyphicon glyphicon-star-empty" aria-hidden="true"></span>      <span class="guidebarintro">管理员</span> </p></a>
                <%}%>
                <%}%>

</div>


<% if(user){ user = user[0]; %>
<div class="list-group usergroup">
               <a class="list-group-item" href="/user/<%- user.userId %>"><p><span class="glyphicon glyphicon-user" aria-hidden="true"></span>      <span class="guidebarintro">我的主页</span> </p></a>
                <a class="list-group-item" href="/collect"><p><span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span>      <span class="guidebarintro">我的收藏</span> </p></a>
                <a class="list-group-item" href="/message"><p><span class="glyphicon glyphicon-bell" aria-hidden="true"></span>      <span class="guidebarintro">私信<span class="badge unAllMsgNum" ><%= user.unMsgNum %></span></span></p></a>
                <a class="list-group-item" href="/setting/<%- user.userId %>"><p><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>      <span class="guidebarintro">设置</span> </p></a>
               <a class="list-group-item" href="/logout"><p><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>      <span class="guidebarintro">登出</span></p></a>
</div>
<% } %>

</div>


<!--小黑点-->

<div class="flowWindow img-circle">
    <h3 class="glyphicon glyphicon-align-justify glyphicon-remove"></h3>
</div>


<script type="text/javascript">

    $('.guideBar').height( $(window).height());
    var pathname = window.location.pathname;
    if($("[href = '"+pathname+"']").length == 0){
        pathname = '/';
    }
    $("[href = '"+pathname+"']").addClass('active');

    $(window).resize(function(event) {

         $('.guideBar').height( $(window).height());
    });

</script>